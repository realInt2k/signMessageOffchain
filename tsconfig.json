{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@store/*": ["store/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"]
    },
    "baseUrl": "./"
  },
  "files": ["./hardhat.config.ts"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "solidity/scripts"],
  "exclude": ["node_modules", "solidity"]
}
